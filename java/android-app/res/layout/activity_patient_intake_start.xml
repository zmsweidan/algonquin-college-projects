<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="patient_intake.PatientIntakeStart">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/PatientIntakeStart_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="@string/patient_start_label"
            android:textAlignment="center"
            android:textSize="20dp" />

        <Button
            android:id="@+id/PatientIntakeStart_form"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/PatientIntakeStart_label"
            android:layout_centerHorizontal="true"
            android:text="@string/patient_start_form" />

        <Button
            android:id="@+id/PatientIntakeStart_import"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/PatientIntakeStart_form"
            android:layout_centerHorizontal="true"
            android:text="@string/patient_start_import" />

        <Button
            android:id="@+id/PatientIntakeStart_manage"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/PatientIntakeStart_import"
            android:layout_centerHorizontal="true"
            android:text="@string/patient_start_manage" />

        <Button
            android:id="@+id/PatientIntakeStart_stats"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/PatientIntakeStart_manage"
            android:layout_centerHorizontal="true"
            android:text="@string/patient_start_stats" />


    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
